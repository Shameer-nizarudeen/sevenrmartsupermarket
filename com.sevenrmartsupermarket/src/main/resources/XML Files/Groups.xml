<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="GroupExecution" thread-count="5" parallel="tests">
	<listeners>
		<listener
			class-name="com.sevenrmartsupermarket.listeners.ExtentReporter"></listener>
	</listeners>

	<test name="SmokeRun">
		<groups>              
			<run>       
				<include name="smoke"></include>
			</run>
		</groups>
		<classes>
			<class name="com.sevenrmartsupermarket.tests.LoginTest"></class>
			<class name="com.sevenrmartsupermarket.tests.HomeTest"></class>
			<class name="com.sevenrmartsupermarket.tests.PushNotifictionTests"></class>
			<class name="com.sevenrmartsupermarket.tests.AddOfferTest"></class>
		</classes>
	</test>
</suite>            